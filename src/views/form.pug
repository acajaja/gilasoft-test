doctype html
html(lang='en-US')
    head
        meta(charset="utf-8")
        title GilaSoftware Notification Test | form
        link(href="/styles/styles.css" rel="stylesheet" type="text/css")
    body
        header
            section
                h1 GilaSoftware Test
                nav
                    a(href="/logs" title="Message Log") view log

        form(action="/process-message" method="post" enctype="application/x-www-form-urlencoded")
            fieldset
                legend Submission Form
                div
                    label Category:
                        select(name="category")
                            option Select category
                            each category, i in categories
                                option(value= category.id)= category.name
                div
                    label Message:
                        br
                        textarea(name="message")
                div
                    button(type="submit") Send